@model Blog.Models.Users
<div>
    <h4>Информация о пользователе @Model.Login</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Email</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            <b>Логин</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt>
            <b>Дата рождения</b>
        </dt>

        <dd>
            @Model.BirthDate.Day.@Model.BirthDate.Month.@Model.BirthDate.Year
        </dd>

        <dt>
            <b>О пользователе:</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.About)
        </dd>

    </dl>
</div>
@if (ViewBag.Blogs.Count != 0)
{
    <p class="h4">Статьи автора:</p>
    foreach (var item in ViewBag.Blogs)
    {
        <div class="col-md-12">
            <h4>
                <a href="@string.Format("../../../Blog/ViewArticle/{0}",item.ArticleId)">
                    @item.Title
                </a>
            </h4>
        </div>
    }
}
else
{
    <p class="h4">Пользователь ещё не делал заметок в своем блоге</p>
}
