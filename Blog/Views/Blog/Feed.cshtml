@model IEnumerable<Blog.Models.Articles>



<h2>Публикации</h2>

@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        <h4>
            <a href="@string.Format("../../../Blog/ViewArticle/{0}",item.ArticleId)">
                    @item.Title
            </a>
        </h4>
    }
    <hr />
    <div class="text-right">
        @if (ViewBag.id > 1)
        {
        <a class="label label-default" href="@string.Format("../../../Blog/Feed/{0}", ViewBag.id - 1)">Назад</a>
        }
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        @if (Model.Count() == 10)
        {
            <a class="label label-default" href="@string.Format("../../../Blog/Feed/{0}", ViewBag.id + 1)">Вперед</a>
        }
    </div>
}
else
{
    <p class="h1">Нет результатов</p>
}