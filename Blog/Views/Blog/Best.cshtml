@model IEnumerable<KeyValuePair<Blog.Models.Articles,int>>



<h2>Лучшие публикации</h2>

@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        
            <div class="col-md-12">
                <h4>
                    @if (item.Value > 0)
                    {
                        <p class="label label-success">+@item.Value</p>
                    }
                    else if (item.Value < 0)
                    {
                        <p class="label label-danger">@item.Value</p>
                    }
                    else
                    {
                        <p class="label label-warning">@item.Value</p>
                    }
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="@string.Format("../../../Blog/ViewArticle/{0}",item.Key.ArticleId)">
                        @item.Key.Title
                    </a>
                </h4>
            </div>
        
    }
        <hr />
        <div class="text-right">
            @if (ViewBag.id > 1)
            {
                <a class="label label-default" href="@string.Format("../../../Blog/Best/{0}", ViewBag.id - 1)">Назад</a>
            }
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            @if (Model.Count() == 10)
            {
                <a class="label label-default" href="@string.Format("../../../Blog/Best/{0}", ViewBag.id + 1)">Вперед</a>
            }
        </div>
}
else
{
    <p class="h1">Нет результатов</p>
}