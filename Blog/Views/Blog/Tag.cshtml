@model IEnumerable<Blog.Models.Articles>


<h2>Статьи по тегу @ViewBag.Tag:</h2>

@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        <a href="@string.Format("../../Blog/ViewArticle/{0}",item.ArticleId)">
            <div class="col-md-12">
                @item.Title
            </div>
        </a>
    }
    if (Model.Count() == 10)
    {
        <hr />
        <div class="text-right">
            <a class="label label-default" href="@string.Format("../../../Blog/Tag/{0}/{1}",ViewBag.TagId, ViewBag.id - 1)">Назад</a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a class="label label-default" href="@string.Format("../../../Blog/Tag/{0}/{1}",ViewBag.TagId, ViewBag.id + 1)">Вперед</a>
        </div>
    }
}
else
{
    <p class="h1">Нет результатов</p>
}